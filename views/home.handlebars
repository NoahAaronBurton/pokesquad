
<div class="row"> 
    {{!-- <h1>Search for Pokemon!</h1> --}}
</div>
<div class="row">
  <div class="ui search">
      <div class="ui icon input">
          <input class="prompt" type="text" placeholder="Search...">
          <i class="search icon"></i>
      </div>
  <div class="results" id="searchResults">
</div>


<div class="row">
  {{#each pokemonStats}}
  <div class="ui card">
    <div class="header" style="text-transform: capitalize;"> {{@key}} </div>
    <div>
      <img id="front-sprite" src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/6.png">
    </div>    
    <div class="content">
      <div class="type hash">
        <p>Fire/Flying</p>
        <span>HP:{{this.hp}}</span>
      </div>
      <br>
      <div class="attack hash">
        <p>ATTACK</p>
        <span>{{this.attack}}</span>
      </div>
      <div class="defense hash">
        <p>DEFENSE</p>
        <span>{{this.defense}}</span>
      </div>
      <div class="speed hash">
        <p>SPEED</p>
        <span>{{this.speed}}</span>
      </div>
      <div class="special hash">
        <p>SPECIAL ATTACK</p>
        <span>{{this.special-attack}}</span>
      </div>
    </div>
  </div>
  {{/each}}
</div>











